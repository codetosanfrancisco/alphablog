<%if @article.errors.any?%>
<div class="col-xs-8 col-xs-offset-2">
	<div class="panel panel-dangert">
		<div class="panel-heading"><h3>Please Try Again : </h3></div>
		<%@article.errors.full_messages.each do |msg|%>
					<div class="panel-body"><%=msg%></div>
		<%end%>
	</div>
</div>
<%end%>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@article,:html => {class:"form-horizontal",role:"form"}) do |f|%>
		<div class="form-group row">
			<%= f.label :title,class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_field :title, class:"form-control",placeholder:"Title of Article",autofocus:true%></div>
		</div>
		<div class="form-group row">
			<%=f.label :description,class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_area :description,class:"form-control",placeholder:"Body of Article",rows:"10"%></div>
		</div>
		 <div class="form-group row">
			<div class="col-sm-offset-2 col-sm-10">
				<%=f.submit class:"btn btn-lg btn-primary"%>
			 </div>
		</div>
		<%end%>
	<div class="col-xs-4 col-xs-offset-4">
		[<%= link_to "Cancel Request and return to article listing",articles_path%>]	
	</div>
	</div>
</div>

