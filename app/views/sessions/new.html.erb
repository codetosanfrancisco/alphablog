<h1>Login</h1>
<%= form_for(:session,:html => {class:"form-horizontal",role:"form"}) do |f|%>
		<div class="form-group row">
			<%=f.label "Email : ",class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_field :email,class:"form-control",placeholder:"eg:voonshunzhi@gmail.com",rows:"10"%></div>
		</div>
		<div class="form-group row">
			<%=f.label "Password : ",class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.password_field :password,class:"form-control",placeholder:"eg:123456.....",rows:"10"%></div>
		</div>
		 <div class="form-group row">
			<div class="col-sm-offset-2 col-sm-10">
				<%=f.submit "Login!",class:"btn btn-lg btn-primary"%>
			 </div>
		</div>
		<%end%>