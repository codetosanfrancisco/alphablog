<h1 align="center">Create new category</h1>

<%= render "shared/error",obj:@category %>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@category,:html => {class:"form-horizontal",role:"form"}) do |f|%>
		<div class="form-group row">
			<%= f.label :name,class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_field :name, class:"form-control",placeholder:"Category name",autofocus:true%></div>
		</div>
		 <div class="form-group row">
			<div class="col-sm-offset-2 col-sm-10">
				<%=f.submit class:"btn btn-lg btn-primary"%>
			 </div>
		</div>
		<%end%>
	</div>
</div>