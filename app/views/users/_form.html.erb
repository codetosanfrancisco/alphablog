<div class="row">
	<div class="col-md-12">
		<%= form_for(@user,:html => {class:"form-horizontal",role:"form"}) do |f|%>
		<div class="form-group row">
			<%= f.label "Username : ",class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_field :username, class:"form-control",placeholder:"eg:DonaldJTrump",autofocus:true%></div>
		</div>
		<div class="form-group row">
			<%=f.label "Email : ",class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.text_field :email,class:"form-control",placeholder:"eg:voonshunzhi@gmail.com",rows:"10"%></div>
		</div>
		<div class="form-group row">
			<%=f.label "Password : ",class:"col-sm-2 col-form-label"%>
			<div class="col-sm-8"><%=f.password_field :password,class:"form-control",placeholder:"eg:123456.....",rows:"10"%></div>
		</div>
		 <div class="form-group row">
			<div class="col-sm-offset-2 col-sm-10">
				<%=f.submit(@user.new_record? ? "Sign Up!" : "Update account",class:"btn btn-lg btn-primary")%>
			 </div>
		</div>
		<%end%>